# docker run -e OPENAI_API_KEY=your_api_key_here -v /path/to/your/code:/code aider-chat-image


# Start with an official Python base image
FROM python:3.9-slim-buster

# Install git and ctags
RUN apt-get update && \
    apt-get install -y \
    git \
    universal-ctags && \
    rm -rf /var/lib/apt/lists/* # Clean up unnecessary files to reduce the image size

# Install the aider-chat package
RUN pip install aider-chat

# Declare the environment variable for the OpenAI API key
ENV OPENAI_API_KEY=""

# Create a directory for the code
WORKDIR /code

# Define the directory as a mount point
VOLUME ["/code"]

# Entry point for the command-line tool
ENTRYPOINT ["aider-chat"]
